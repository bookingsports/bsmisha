<h3><%= order.guid %></h3>
<table class="table table-hover">
	<thead>
		<tr>
			<th>Стадион</th>
			<th>Начало</th>
			<th>Конец</th>
			<th>Длительность</th>
			<th>Цена</th>
		</tr>
	</thead>
	<tbody>
		<% order.events.each do |item| %>
			<tr>
				<td><%= link_to item.court.stadium.name, item.court.stadium %></td>
				<td><%= l item.start, format: :short %></td>
				<td><%= l item.end, format: :short %></td>
				<td><%= t('hours', count: item.duration_in_hours) %></td>
				<td><%= number_to_integer_currency item.total %></td>	
			</tr>
		<% end %>
	</tbody>
</table>
<% if order.unpaid? %>
	<%= simple_form_for order, url: pay_order_path(order) do |f| %>
		<%= f.hidden_field :id %>
		<%= f.button :submit, "Оплатить #{number_to_integer_currency order.total}", class: 'btn-primary' %>
	<% end %>
<% end %>