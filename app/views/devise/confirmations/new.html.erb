<h2>Выслать инструкции по подтверждению заново</h2>

<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Выслать инструкции по подтверждению заново" %>
  </div>
<% end %>

<%= link_to "Войти в систему/Зарегистрироваться", new_session_path(resource_name) %><br />
<%= link_to "Забыли пароль?", new_password_path(resource_name) %><br />