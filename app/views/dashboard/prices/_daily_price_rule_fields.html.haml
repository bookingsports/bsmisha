%tr.nested-fields.site-table__item
  %td.site-table__item-option
    %span.site-table__item-title
      Начало:
    = f.input :start, as: :datetime, discard_year: true, discard_month: true, default: Time.parse(@area.stadium.opens_at.to_s), minute_step: 30, label: false
  %td.site-table__item-option
    %span.site-table__item-title
      Конец:
    = f.input :stop, as: :datetime, discard_year: true, discard_month: true, default: Time.parse(@area.stadium.closes_at.to_s), minute_step: 30, label: false
  %td.site-table__item-option
    %span.site-table__item-title
      Рабочие дни:
    = f.input :working_days, as: :check_boxes, collection: [["Пн", 1], ["Вт", 2], ["Ср", 3], ["Чт", 4], ["Пт", 5], ["Сб", 6], ["Вс", 0]],  label: false
  %td.site-table__item-option
    %span.site-table__item-title
      Цена:
    = f.input :value, label: false
  %td.site-table__item-option
    %span.site-table__item-title
      Акция:
    = f.input :is_discount, label: '.', wrapper_html: { :class => 'checkbox_wrap' }
  %td.site-table__item-option
    = link_to_remove_association 'Удалить правило', f, class: 'btn btn-sm btn-danger'