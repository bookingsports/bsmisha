= simple_form_for [:dashboard, @request], wrapper: :inline_form, html: { class: 'form-inline'} do |f|
  = f.input :amount, label: 'Сумма'
  = f.button :submit, "Перейти к выводу", class: 'btn btn-primary'
  = f.error_notification
%table.table.table-striped.table-hover.site-table
  %thead.site-table__head
    %tr
      %th Сумма
      %th Дата
      %th Статус
      %th
  %tbody.site-table__body
    = render @requests
