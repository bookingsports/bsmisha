%tr
  %td= withdrawal_request.amount
  %td= withdrawal_request.created_at
  %td= I18n.t "enums.withdrawal_request.status.#{withdrawal_request.status.to_s}"
  - if !withdrawal_request.success?
    %td= link_to "Удалить", dashboard_withdrawal_request_path(withdrawal_request), data: { confirm: 'Вы уверены?' }, method: :delete
  - else
    %td
