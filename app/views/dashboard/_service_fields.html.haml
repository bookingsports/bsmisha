%tr.nested-fields.site-table__item
  %td.site-table__item-option
    %span.site-table__item-title
      Название:
    = f.input :name, label: false
  %td.site-table__item-option
    %span.site-table__item-title
      Стоимость:
    = f.input :price, label: false
  %td.site-table__item-option
    %span.site-table__item-title
      Периодичность:
    = f.input :periodic?, as: :boolean, label: 'Да'
  %td.site-table__item-option
    = link_to_remove_association 'Удалить услугу', f, class: 'btn btn-danger'