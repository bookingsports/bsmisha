- if @product.kind_of? Stadium
  = simple_form_for @product, as: :product, url: dashboard_product_path do |f|
    .row.top15
      .col-xs-12
        .btn-toolbar
          = link_to fa_icon('camera-retro') + ' Загрузить фото', dashboard_product_pictures_path, class: 'btn btn-default'
      .col-md-6
        = f.association :category
        = f.input :name
        = f.input :address
        = f.input :latitude, as: :hidden
        = f.input :longitude, as: :hidden
        = f.input :phone
        = f.input :description

        %label Время работы стадиона:
        = f.input :opens_at, as: :datetime, discard_year: true, discard_month: true, label: false
        = f.input :closes_at, as: :datetime, discard_year: true, discard_month: true, label: false
      .col-md-6
        %label Выберите месторасположение:
        = render 'draggable_map'
    .row
      .col-xs-12
        %h4 Цены
        = link_to 'Настроить цены', dashboard_special_prices_path, class: 'btn btn-primary'
        %h4 Площадки
        = link_to_add_association 'Добавить площадку', f, :areas, class: 'btn btn-primary', 'data-association-insertion-node' => '.areas', 'data-association-insertion-method' => 'append'
        %table.table
          %thead
            %tr
              %th Название
              %th Стоимость часа
              %th Стоимость переноса
              %th
          %tbody.areas
            = f.simple_fields_for :areas, @product.areas.any? && @product.areas || @product.areas.new do |area|
              = render "area_fields", f: area
        %h4 Дополнительные услуги
        = link_to_add_association 'Добавить услугу', f, :product_services, class: 'btn btn-primary', 'data-association-insertion-node' => '.services', 'data-association-insertion-method' => 'append'
        %table.table
          %thead
            %tr
              %th Название
              %th Стоимость
              %th Периодичность
              %th
          %tbody.services
            = f.simple_fields_for :product_services, @product.product_services.any? && @product.product_services || @product.product_services.new do |area|
              = render "product_service_fields", f: area
        = f.button :submit
- elsif @product.kind_of? Coach
  = simple_form_for @product, as: :product, url: dashboard_product_path do |f|
    = f.input :avatar, as: :image_file, version: :small_square
    = f.input :name
    = f.input :phone
    = f.input :price, as: :string
    = f.input :description, as: :text

    .form-group
      = link_to fa_icon('edit') + ' Сменить пароль или почту', edit_user_registration_path, class: 'btn btn-default'
    = f.button :submit, 'Сохранить'
