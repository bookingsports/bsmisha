- content_for :scripts do
  = javascript_include_tag 'one_day_schedule_view'

.body-bg
  %div.one_day__base
    %h2.col-xs-12 Расписание
    = form_tag one_day_events_path, method: :get, wrapper: 'horizontal_form', enforce_utf8: false do |f|
      .col-xs-12
        .row
          .col-lg-6.col-md-8.col-xs-12
            .row
              .col-xs-12
                = label_tag 'stadium', "Стадион"
              .col-xs-12.form_event_select
                = select_tag :stadium, options_from_collection_for_select(Stadium.active, "slug", "name", @stadium.slug), class: 'form-control'
                = submit_tag 'Выбрать', class: 'btn btn-success form_event_select_btn', name: nil
      .col-xs-12
        %hr
      .col-md-4.col-xs-12
        %h4 Площадки
        %ul.nav.nav-pills.nav-stacked
          = active_link_to 'Все площадки', one_day_events_path(stadium: @stadium.slug), active: /^(?!.*id).*$/, wrap_tag: :li
          - @stadium.areas.each do |cc|
            = active_link_to [cc.name].compact.join(', '), one_day_events_path(stadium: @stadium.slug, id: cc.slug), active: /id=#{cc.slug}/, wrap_tag: :li
      .col-md-8.col-xs-12
        = render "schedule_legend"
        #scheduler