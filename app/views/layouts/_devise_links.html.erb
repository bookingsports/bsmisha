<% if user_signed_in? %>
  <% if current_user.admin? %>
    <li><%= link_to 'Админка', rails_admin_path %></li>
  <% else %>
  <li><%= link_to dashboard_grid_path(@user) do %>
    Личный кабинет
    <% end %>
  </li>
  <% end %>
  <li>
    <% unless current_user.admin? %>
      <%= link_to 'Заказы', current_user.type == "StadiumUser" ? paid_my_events_path : my_events_path %>
    <% end %>
  </li>
  <li><%= link_to 'Выход', destroy_user_session_path, :method=>'delete' %></li>
<% else %>
  <li><%= link_to 'Вход / Регистрация', new_user_session_path %></li>
<% end %>
