%li.clearfix
  .row
    .col-md-2
      = image_tag coach.avatar.small_square.presence || coach.gravatar_url, class: 'avatar photo pull-left'
    .col-md-10
      = link_to coach.name, coach_events_path(coach)
      - if coach.phone?
        %h5= fa_icon('phone') + ' ' + coach.phone
      - if coach.description?
        %h5= fa_icon('info-circle') + ' ' +  truncate(coach.description)