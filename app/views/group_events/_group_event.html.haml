%tr.site-table__item
  %td.site-table__item-option
    %span.site-table__item-title
      Площадка:
    = group_event.area.name
  %td.site-table__item-option
    %span.site-table__item-title
      Начало:
    = l group_event.start, format: :short
  %td.site-table__item-option
    %span.site-table__item-title
      Конец:
    = l group_event.stop, format: :short
  %td.site-table__item-option
    %span.site-table__item-title
      Цена:
    = number_to_integer_currency group_event.price
