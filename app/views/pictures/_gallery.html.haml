#photos.tab-pane{:role => "tabpanel"}
  .row.photos__wrap
    - @product.pictures.each do |picture|
      .col-lg-3.col-md-4.col-sm-6.col-xs-12.photos__box
        = link_to picture.name.to_s, data: { lightbox: 'stadium' }  do
          = image_tag picture.name, height: '200', class: 'img-responsive thumbnail rounded'
        = picture.description